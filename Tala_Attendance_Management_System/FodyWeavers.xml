<?xml version="1.0" encoding="utf-8"?>
<Weavers xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="FodyWeavers.xsd">
  <Costura>
    <!-- Include these assemblies in the main executable -->
    <IncludeAssemblies>
      Newtonsoft.Json
    </IncludeAssemblies>
    
    <!-- Exclude large assemblies that should stay separate -->
    <ExcludeAssemblies>
      Microsoft.ReportViewer.Common
      Microsoft.ReportViewer.DataVisualization
      Microsoft.ReportViewer.Design
      Microsoft.ReportViewer.ProcessingObjectModel
      Microsoft.ReportViewer.WinForms
      Microsoft.SqlServer.Types
    </ExcludeAssemblies>
    
    <!-- Create temporary files in temp directory -->
    <CreateTemporaryAssemblies>true</CreateTemporaryAssemblies>
  </Costura>
</Weavers>